<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
    android:fillViewport="true" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="20dip" >
	    
	    <TextView
	        android:id="@+id/guideline_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:paddingBottom="20dip"
	    />
	    
	    <TableLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	        <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	        		android:paddingRight="10dip"
	            	android:text="Benzene: "
	            />
	            
	            <TextView 
	                android:id="@+id/b_guideline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            />
	            
	         </TableRow>
	            
	         <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	        		android:paddingRight="10dip"
	            	android:text="Toluene: "
	            />
	            
	            <TextView 
	                android:id="@+id/t_guideline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            />
	        </TableRow>
	            
	        <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	        		android:paddingRight="10dip"
	            	android:text="Ethyl Benzene: "
	            />
	            
	            <TextView 
	                android:id="@+id/e_guideline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            />
	        </TableRow>
	            
	        <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	        		android:paddingRight="10dip"
	            	android:text="Xylenes: "
	            />
	            
	            <TextView 
	                android:id="@+id/x_guideline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            />
	        </TableRow>
	                   
	        <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	        		android:paddingRight="10dip"
	            	android:text="Modified TPH: "
	            />
	            
	            <TextView 
	                android:id="@+id/tph_guideline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            />
	            
	        </TableRow>
	        
	    </TableLayout>
	
	</LinearLayout>

</ScrollView>